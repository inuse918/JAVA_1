import java.util.*;

public class methodpractice2_2 {
	public void result(int a){
		if (a<0){
			a*=-1;
		}
		System.out.println("절댓값은 "+a);
	}	
	public static void main(String[] args) {
		methodpractice2_2 t2_2=new methodpractice2_2();
		Scanner sc=new Scanner(System.in);
		System.out.print("절댓값을 구할 수 입력 : ");
		t2_2.result(sc.nextInt());

	}

}