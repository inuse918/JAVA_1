import java.util.*;

public class add{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 입력하세요 : ");
		int n = sc.nextInt();
		
		int sum = 0;
		int i = 1;
		while (i<=n)
		{
			if (i%2==0)
			{
				sum = sum+i;
			}
			i++;
		}System.out.println("짝수의 합은 " + sum +" 입니다.");
	} 
}